{
  "name": "derzis-worker",
  "version": "0.0.1",
  "description": "Derzis: a Linked Data crawler",
  "main": "index.js",
  "author": "Andr√© Santos <andrefs@andrefs.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "build": "tsc",
    "postbuild": "cp package.json build/package.json && cp yarn.lock build/yarn.lock && cd build && yarn install",
    "old-test": "mocha 'tests/**test.js'",
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/bin/worker.ts"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "cheerio": "^1.0.0-rc.5",
    "colors": "^1.4.0",
    "content-type": "^1.0.4",
    "http-link-header": "^1.0.3",
    "n3": "^1.8.1",
    "parse-link-header": "2.0.0",
    "rdf-parse": "^2.0.0",
    "redis": "^3.0.2",
    "robots-parser": "^2.2.0",
    "streamify-string": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "packageManager": "yarn@3.2.1"
}
