{
  "name": "derzis-common",
  "version": "0.1.0",
  "description": "Derzis: a Linked Data crawler",
  "main": "index.js",
  "author": "Andr√© Santos <andrefs@andrefs.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "build": "tsc",
    "postbuild": "cp package.json build/package.json && cp yarn.lock build/yarn.lock && cd build && yarn install",
    "old-test": "mocha 'tests/**test.js'"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "lodash": "^4.17.21",
    "redis": "4.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-generator": "^2.1.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.1"
}
