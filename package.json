{
  "name": "derzis-common",
  "version": "0.5.0",
  "description": "Derzis: a Linked Data crawler",
  "author": "Andr√© Santos <andrefs@andrefs.com>",
  "license": "MIT",
  "types": "index.d.ts",
  "scripts": {
    "test": "node --experimental-vm-modules $(npm bin jest) --coverage",
    "test:watch": "node --experimental-vm-modules $(npm bin jest) --coverage --watch",
    "build": "tsc --project tsconfig.json && tsconfig-replace-paths --project tsconfig.json && cp -r src/manager/views dist/src/manager/views",
    "postbuild": "cp package.json dist/package.json && cp package-lock.json dist/package-lock.json && cd dist && npm install",
    "typecheck": "tsc -b tsconfig.json",
    "typecheck:watch": "npm run typecheck",
    "//watch-crawl-delays": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/common/bin/watch-crawl-delays.ts",
    "//worker": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/worker/bin/worker.ts",
    "worker": "node dist/worker/bin/worker"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@derzis/common": "<rootDir>/src/common/",
      "@derzis/config": "<rootDir>/src/config/",
      "@derzis/worker": "<rootDir>/src/worker/",
      "@derzis/models": "<rootDir>/src/models/",
      "@derzis/manager": "<rootDir>/src/manager/"
    }
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bluebird": "^3.7.2",
    "chalk": "^5.0.1",
    "cheerio": "^1.0.0-rc.5",
    "content-type": "^1.0.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^6.0.6",
    "http-link-header": "^1.0.3",
    "humanize-digest": "^1.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.3.4",
    "morgan": "^1.10.0",
    "n3": "^1.8.1",
    "parse-link-header": "2.0.0",
    "rdf-parse": "^2.0.0",
    "redis": "^4.1.0",
    "robots-parser": "^2.2.0",
    "streamify-string": "^1.0.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/content-type": "^1.1.5",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.182",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/streamify-string": "^1.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "chai-generator": "^2.1.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-replace-paths": "^0.0.11",
    "typescript": "5.0.4"
  }
}
