{
  "name": "derzis-common",
  "version": "0.6.0",
  "description": "Derzis: a Linked Data crawler",
  "author": "Andr√© Santos <andrefs@andrefs.com>",
  "license": "MIT",
  "types": "index.d.ts",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest ",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "build": "tsc --project tsconfig.json && tsconfig-replace-paths --project tsconfig.json && cp -r src/manager/views dist/src/manager/views",
    "postbuild": "cp package.json dist/package.json && cp package-lock.json dist/package-lock.json && cd dist && npm install",
    "typecheck": "tsc -b tsconfig.json",
    "typecheck:watch": "tsc -b tsconfig.json --watch",
    "//watch-crawl-delays": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/common/bin/watch-crawl-delays.ts",
    "//worker": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/worker/bin/worker.ts",
    "worker": "node dist/worker/bin/worker"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@derzis/common": "<rootDir>/src/common/",
      "@derzis/config": "<rootDir>/src/config/",
      "@derzis/worker": "<rootDir>/src/worker/",
      "@derzis/models": "<rootDir>/src/models/",
      "@derzis/manager": "<rootDir>/src/manager/"
    }
  },
  "//jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "@derzis/common": "<rootDir>/src/common/",
      "@derzis/config": "<rootDir>/src/config/",
      "@derzis/worker": "<rootDir>/src/worker/",
      "@derzis/models": "<rootDir>/src/models/",
      "@derzis/manager": "<rootDir>/src/manager/"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bluebird": "^3.7.2",
    "chalk": "^5.2.0",
    "cheerio": "^1.0.0-rc.12",
    "content-type": "^1.0.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "http-link-header": "^1.1.1",
    "humanize-digest": "^1.0.0",
    "lodash": "^4.17.21",
    "mongoose": "7.3.1",
    "morgan": "^1.10.0",
    "n3": "^1.17.0",
    "parse-link-header": "2.0.0",
    "rdf-parse": "^2.3.2",
    "redis": "^4.6.7",
    "robots-parser": "^3.0.1",
    "streamify-string": "^1.0.1",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.38",
    "@types/content-type": "^1.1.5",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/streamify-string": "^1.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "jest": "^29.5.0",
    "ts-jest": "29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "5.1.3"
  }
}
