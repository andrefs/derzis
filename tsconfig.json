{
  "declaration": true,
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2015.promise"],
    "module": "ESNEXT",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@derzis/models": [ "./src/manager/models/index.ts" ],
      "@derzis/common": [ "./src/common/lib/index.ts"],
      "@derzis/config": [ "./src/config.ts" ],
      "@derzis/worker": [ "./src/worker/index.ts" ]
      "@derzis/manager": [ "./src/manager/index.ts" ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
