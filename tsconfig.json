{
  "declaration": true,
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.AsyncIterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "checkJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@derzis/models": ["./src/models/"],
      "@derzis/common": ["./src/common/lib/"],
      "@derzis/config": ["./src/config/"],
      "@derzis/worker": ["./src/worker/"],
      "@derzis/manager": ["./src/manager/"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
