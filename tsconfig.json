{
  "declaration": true,
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2015.promise"],
    "module": "ESNEXT",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@derzis/models": [ "./src/manager/models/" ],
      "@derzis/common": [ "./src/common/lib/"],
      "@derzis/config": [ "./src/config/" ],
      "@derzis/worker": [ "./src/worker/" ],
      "@derzis/manager": [ "./src/manager/" ]
    }
  },
  "include": ["./src/"],
  "exclude": ["node_modules"]
}
