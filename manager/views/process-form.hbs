<div class="container py-4">
  <header>
    <h2>Add new crawling process</h2>
  </header>
  <main>
    <div class="row">
      <div class="col">
        <form action="/processes" method="POST" >
          <div class="form-group row">
            <label for="email" class="col-form-label col-sm-2">Email:</label>
            <div class="col-sm-6">
              <div class="input-group">
                <input type="text" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                <span class="input-group-text" data-bs-toggle="tooltip" data-bs-placement="top" title="We'll only send you 3 emails: confirming your process has been added; when your process starts; and when your process finishes. No SPAM">?</span>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <label for="seeds" class="col-form-label col-sm-2">Seeds:</label>
            <div class="col-sm-6">
              <div class="input-group">
                <textarea id="seeds" class="form-control" rows="3" name="seeds"></textarea>
                <span class="input-group-text" data-bs-toggle="tooltip" data-bs-placement="top" title="One resource URL per line">?</span>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary mb-3">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>

