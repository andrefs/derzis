#!/bin/bash


SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
DBURI=$(node "$SCRIPTPATH"/getConfigVal.js db.uri)

echo Clearing $DBURI

mongo $DBURI --eval "db.domains.drop()"
mongo $DBURI --eval "db.paths.drop()"
mongo $DBURI --eval "db.resources.drop()"
mongo $DBURI --eval "db.triples.drop()"
